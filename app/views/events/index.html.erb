
<h1>Events Index</h1>

<!-- <a href="/auth/google_oauth2">Login with Google</a> -->

<div class="row">
  <div class="col-sm-10">
    <%= link_to "Add Event", new_event_path, class: "btn btn-primary pull-right" %>
    <% if @current_user.provider %>
      <%= link_to "Disconnect from Google Calendar", auth_logout_path, class: "btn btn-warning pull-right" %>
    <% else %>
      <%= link_to "Connect to Google Calendar", "/auth/google_oauth2", class: "btn btn-primary pull-right" %>
    <% end %>
  </div>
</div>

<div class='row'>
  <div class='col-sm-8 col-sm-offset-2'>
    <div id='calendar'></div>
  </div>
</div>
