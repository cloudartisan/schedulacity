<div class='container'>
  <div class='well'>
    <h1>Student Profile
    <%= link_to '', student_path(@student.id), :class => 'btn btn-danger glyphicon glyphicon-trash pull-right', method: :delete, data: {confirm: "Are you sure you want to remove #{@student.name} from the database?"} %>
    <%= link_to '', edit_student_path(@student.id), :class => 'btn btn-primary glyphicon glyphicon-pencil pull-right' %>
    <a class="btn btn-primary glyphicon glyphicon-phone pull-right" data-toggle="modal" href='#modal-id'></a>
    </h1>
    <div class="modal fade" id="modal-id">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 class="modal-title">Send <%= @student.name %> a text:</h3>
          </div>
          <div class="modal-body">
            <%= bootstrap_form_for :twilio, url: '/twilio/single_message', method: :post do |f| %>
              <%=f.text_field "Hey" %>
              <input name='id' type='hidden' value="<%=@student.id %>" >
              <%=f.submit "Send Text", :class => 'btn btn-primary' %>
            <% end %>

          </div>
          <div class="modal-footer">
          </div>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

<div class='well'>
  <div class='col-xs-12 col-md-10 col-md-offset-1'>
    <ul class="student list-group">
      <li class="student list-group-item"><b>Name</b>: <%= @student.name %></li>
      <li class="student list-group-item"><b>Classes</b>: <ul><% @student_classes.each do |session| %> <li><%= link_to session.name, classgroup_path(session.id) %></li> <% end %></ul></li>
      <li class="student list-group-item"><b>Notes</b>: <%= @student.note %></li>
      <li class="student list-group-item"><b>Email</b>: <%= @student.email %></li>
      <li class="student list-group-item"><b>Birthday</b>: <%= @student.dob %></li>
      <li class="student list-group-item"><b>Phone</b>: <%= @student.phone_number %></li>
      <li class="student list-group-item"><b>Street</b>: <%= @student.street %></li>
      <li class="student list-group-item"><b>City</b>: <%= @student.city %></li>
      <li class="student list-group-item"><b>State</b>: <%= @student.state %></li>
      <li class="student list-group-item"><b>Zip</b>: <%= @student.zip %></li>
    </ul>

  </div>
</div>
  <div class='row'>
    <div class='col-xs-10'>
      <%= link_to "&larr; Back".html_safe, "javascript:history.go(-1)" %>
    </div>
  </div>
  </div>
</div>
