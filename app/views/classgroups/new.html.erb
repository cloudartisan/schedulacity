<div class='container'>
  <div class='well'>
    <h1>Create New Class</h1>
<div class='well'>
  <div class='col-xs-10 col-xs-offset-1'>
    <%= bootstrap_form_for @class do |f| %>
      <%= f.text_field :name, :placeholder => 'Name', :class => 'input-lg' %>
      <%= f.text_area :description, :placeholder => 'Description', :class => 'input-lg' %>
      <%= f.hidden_field :user_id, :value => @current_user.id %>
      <%= f.hidden_field :active, :value => true %>
      <%= f.submit 'Submit', :class => 'btn btn-primary btn-lg' %>
    <% end %>
  </div>
  </div>
    <div class='row'>
    <div class='col-xs-10' id="backeventshow">
      <%= link_to "&larr; Back".html_safe, "javascript:history.go(-1)" %>

    </div>
  </div>
</div>
</div>