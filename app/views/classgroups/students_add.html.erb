<div class='container-fluid'>
<div id="studentaddpage">
  <div class='well'>
  <div class="col-xs-12">
    <h1>Add Student to <b><%= link_to @class.name, classgroup_path(@class.id) %></b></h1>

<div class="well">
  <div class='col-md-6 col-xs-12'>
  <div class="well" id="classnewwellclass">
    <h2>Create New Student</h2>
    <br>
    <br>
    <%= bootstrap_form_for @student, :url => "/classgroups/#{params['id']}/students" do |f| %>
      <%= f.text_field :name, :hide_label => true, placeholder: 'Name', :class => 'input-lg' %>
      <%= f.text_field :email, :hide_label => true, placeholder: "Email", :class => 'input-lg' %>
      <%= f.text_area :note, :hide_label => true, placeholder: 'Notes', :class => 'input-lg' %>
      <%= f.text_field :dob, :hide_label => true, placeholder: 'Birthday', :class => 'input-lg' %>
      <%= f.text_field :phone_number, :hide_label => true, placeholder: "Phone Number", :class => 'input-lg' %>
      <%= f.text_field :street, :hide_label => true, placeholder: "Address", :class => 'input-lg' %>
      <%= f.text_field :city, :hide_label => true, placeholder: "City", :class => 'input-lg' %>
      <%= f.text_field :state, :hide_label => true, placeholder: "State", :class => 'input-lg' %>
      <%= f.text_field :zip, :hide_label => true, placeholder: "Zip", :class => 'input-lg' %>
      <%= f.hidden_field :notifications, :value => true %>
      <%= f.hidden_field :user_id, :value => @current_user.id %>
      <%= f.submit 'Submit', :class => 'btn btn-primary btn-lg add-student-btn', :style => "margin-top: 10px" %>
    <% end %>
  </div>
  </div>
  <div class='col-md-6 col-xs-12'>
  <div class="well" id="classsaddwellstudents">
    <h2>Existing Students</h2>
    <br>
    <br>
    <%= bootstrap_form_for @class, :url => "/classgroups/#{params['id']}/students" do |f| %>
      <%= f.collection_check_boxes :student_ids, @all_students, :id, :name, :hide_label => true, :html => {:class=>'to-labelauty-xs'}, :stlye => "margin: 10px;" %>
      <%= f.submit 'Submit', :class => 'btn btn-primary btn-lg', :style => "margin-top: 10px" %>
    <% end %>
  </div>
  </div>
</div>
    <div class='row'>
    <div class='col-xs-10' id="backeventshow">
      <%= link_to "&larr; Back".html_safe, "javascript:history.go(-1)" %>

    </div>
  </div>
  </div>
  </div>
  </div>
</div>
